generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Client {
  id           String @id @default(uuid())
  nome_cliente String
  email        String
  cpf          String
  telephone    String

  SalesOrder SalesOrder[]

  @@map("clients")
}

model SalesOrder {
  id               String   @id @default(uuid())
  product_name     String
  sales_order_data DateTime @default(now())
  amount           Decimal
  unitary_value    Decimal

  client  Client @relation(fields: [clientId], references: [id])
  clientId String

  @@map("salesOrders")
}
